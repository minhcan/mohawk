<!-- /templates/index.liquid -->
<div class="wrapper space-top-20">
	<div class="grid--rev">
		<div class="grid__item large--three-quarters">
			{%for i in (1..4)%}
			{%capture home_section%}home_section_{{i}}{%endcapture%}
				{% if settings[home_section] != blank %}
				<section>
					<div class="{{settings[home_section]}} clearfix">
						<div class="wrapper-content">
						<div class="inner">
							{% include settings[home_section] %}
						</div>
					</div>
					</div>
				</section>
				{% endif %}
			{%endfor%}
		</div>
		<div class="sidebar grid__item large--one-quarter">
			 {% include 'collection-sidebar' %}
		</div>
	</div>
	{% if settings.home_section_5 != blank %}
		<section>
			<div class="{{settings[home_section]}} clearfix">
				<div class="wrapper-content">
				<div class="inner">
					{% include settings.home_section_5 %}
				</div>
			</div>
			</div>
		</section>
	{% endif %}
</div>
