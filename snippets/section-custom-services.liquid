<!-- /templates/snippets/section-custom-services.liquid -->
<div class="services-section">
	<div class="grid">
		<div class="grid__item large--two-thirds medium--one-whole">
			<div class="image-services effect-special">
				<a href="#">
					 {{ 'image-services.jpg' | asset_url | img_tag }}
				</a>
			</div>
		</div>	
		<div class="grid__item large--one-third medium--one-whole">
			<div class="box-feature clearfix">
				{% for i in (1..3) %}
					{% capture _enable %}enable_box_{{ i }}{% endcapture %}
					{% capture _icon %}icon_{{ i }}.jpg{% endcapture %}
					{% capture _title %}title_services_{{ i }}{% endcapture %}
					{% capture _des %}des_services_{{ i }}{% endcapture %}
					{% assign enable = settings[_enable] %}
					{% if enable %}
					{% assign url = settings[_url] %}
						<div class="feature-box">
							<div class="fbox-icon">
								{{ _icon | asset_url | img_tag }}
							</div>
							<div class="fbox-content">
								<div class="fbox-body">
									<h4>{{settings.[_title]}}</h4>
								</div>
								<p class="description"> {{settings.[_des]}} </p>
							</div>
						</div>		
					{% endif %}
				{% endfor %}
			</div>
			
		</div>	
	</div>
</div>