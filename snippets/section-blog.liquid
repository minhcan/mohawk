<!-- /templates/snippets/section-blog.liquid -->
{% assign blogs_home = blogs[settings.home_blogs_select].articles %}
{% assign _row = settings.home_blogs_num%}
{% assign _limit = settings.home_blogs_limit | plus:0 %}
{% case _row %}
	{% when '2' %}
		 {% capture grid_item_width %} large--one-half medium--one-half {% endcapture %}
	{% when '3' %}
		 {% capture grid_item_width %} large--one-third medium--one-half {% endcapture %}
	{% when '4' %}
		 {% capture grid_item_width %} large--one-quarter medium--one-half {% endcapture %}
	{% when '5' %}
		 {% capture grid_item_width %} large--one-fifth medium--one-half {% endcapture %}
	{% when '6' %}
		 {% capture grid_item_width %} large--one-sixth medium--one-half {% endcapture %}
	{% else %}
		 {% capture grid_item_width %} large--one-quarter medium--one-half {% endcapture %}
{% endcase %}

	<div class="latest-posts grid text-center ">
		{% for article in blogs_home limit: _limit %}
				 {% include 'blog_block' %}
		{% endfor %}
	</div>
