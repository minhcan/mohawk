                </div>
            </a>
        </div>
        <div class="grid__item large--one-third medium--one-third">
            <a href="{{settings.b4_url}}" class="effect effect-v3" title="banner">
                {{ b4 | asset_url | img_tag }}
                <div class="text {{settings.b4_position}}">
                    <span class="text1">{{settings.b4_text_1}}</span><br>
                    <span class="text2">{{settings.b4_text_2}}</span>
                </div>
            </a>
        </div>
        <div class="grid__item large--one-third medium--one-third">
            <a href="{{settings.b6_url}}" class="effect effect-v3" title="banner">
            	{{ b6 | asset_url | img_tag }}
                <div class="text {{settings.b6_position}}">
                    <span class="text1">{{settings.b6_text_1}}</span><br>
                    <span class="text2">{{settings.b6_text_2}}</span>
                </div>
            </a>
        </div>
    </div>

</div>
