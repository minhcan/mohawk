                    <span class="text2">{{settings.b2_text_2}}</span>
                </div>
            </a>
        </div>
        <div class="grid__item large--one-third medium--one-third">
            <a href="{{settings.b3_url}}" class="effect effect-v3" title="banner">
                {{ b3 | asset_url | img_tag }}
