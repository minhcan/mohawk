<!-- /templates/snippets/section-custom-top.liquid -->
<div class="custom-top ">
    {% capture b1 %}b1.jpg{% endcapture %}
    {% capture b2 %}b2.jpg{% endcapture %}
    {% capture b3 %}b3.jpg{% endcapture %}
    {% capture b4 %}b4.jpg{% endcapture %}
	{% capture b6 %}b6.jpg{% endcapture %}
	<div class="grid--full">
        <div class="grid__item large--one-half medium--one-half">
            <a href="{{settings.b1_url}}" class="effect effect-v3" title="banner">
            	{{ b1 | asset_url | img_tag }}
                <div class="text {{settings.b1_position}}">
                    <span class="text1">{{settings.b1_text_1}}</span><br>
                    <span class="text2">{{settings.b1_text_2}}</span>
                </div>
            </a>
        </div>
        <div class="grid__item large--one-half medium--one-half">
            <a href="{{settings.b2_url}}" class="effect effect-v3" title="banner">
